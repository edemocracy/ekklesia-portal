- if layout
  - extends "ekklesia_portal/layout.j2.jade"

- block title
  if layout
    title
      = brand_title
      |&nbsp;-&nbsp;
      = _('subject_area')


- block content

  if layout
    h2= _('subject_area')

  .subject_area.container
    h3
      a(href=self_link)
        = department_name
        |&nbsp;>
        = name

      if show_edit_button
        a.edit_button(href=edit_url)
          i.far.fa-edit
          |&nbsp;
          = _('edit_button')

    if options.show_details
      dl
        dt= _('number_of_area_members', num=num_members)
        if description
          dt= _('description')
          dd= description
